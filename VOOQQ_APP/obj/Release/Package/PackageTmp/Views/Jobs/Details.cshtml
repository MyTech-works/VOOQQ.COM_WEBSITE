                            </div>
                            <div class="item">
                                <div class="product-img">
                                    <img class="img-fluid" src="@item.Image3" alt="">
                                </div>
                                <span class="price">$@item.Salary</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-12 col-xs-12">
                    <div class="details-box">
                        <div class="ads-details-info">
                            <h2>@item.Title</h2>
                            <p class="mb-2">@item.JobCategoryName</p>
                            <div class="details-meta">
                                <span><a href="#"><i class="lni-alarm-clock"></i> @item.Date</a></span>
                                <span><a href="#"><i class="lni-map-marker"></i>@item.Location</a></span>
                                <span><a href="#"><i class="lni-eye"></i>@item.Views View</a></span>
                            </div>
                            <h4 class="title-small mb-3">Job Status Name:</h4>
                            <ul class="list-specification">
                                <li><i class="lni-check-mark-circle"></i> @item.JobStatusName</li>
                                    @*<li><i class="lni-check-mark-circle"></i> 2.7 GHz dual-core Intel Core i5</li>
